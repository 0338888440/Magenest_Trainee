<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Knockout Js Testing Page</title>
    </head>
    <body>
        <referenceBlock name="content">
            <block class="Magenest\KnockoutJs\Block\Test" name="knockoutjs_movie_block" template="movie.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="movie" xsi:type="array">
                                <item name="component" xsi:type="string">Magenest_KnockoutJs/js/view/movie</item>
                                <item name="displayArea" xsi:type="string">movie</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>